type User {
  id: ID! @id @unique
  username: String! @unique
  email: String! @unique
  firstName: String
  lastName: String
  uploadlist: [Book!] @relation(link: INLINE, name:"Upload")
  keeplist: [Book!] @relation(name:"Keep")
  reviewlist : [Reveiw] @relation(link: INLINE, name:"Review")
}
}
type Book {
  id: ID! @id @unique
  title: String!
  author: String!
  pubDate: DateTime!
  priceStandard: Int
  coverSmallUrl: String
  publisher: String
  description: String
  stars: Int
  uploadedby: User! @relation(link: INLINE, name:"Upload")
  keepedBy: [User!] @relation(name:"Keep")
  gotreview: [Reveiw!]!
}

type Reveiw {
  id: ID! @id @unique
  title: String!
  contents: String!
  writtenby: User! @relation(link: INLINE, name:"Review")
}

